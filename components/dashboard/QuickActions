import React from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Plus, Calendar, BarChart3, Sparkles } from "lucide-react";

export default function QuickActions({ todayTasksCount }) {
  const actions = [
    {
      title: "Add Task",
      icon: Plus,
      color: "from-blue-500 to-cyan-500",
      link: createPageUrl("TaskManager"),
    },
    {
      title: "View Calendar",
      icon: Calendar,
      color: "from-purple-500 to-pink-500",
      link: createPageUrl("Calendar"),
    },
    {
      title: "Analytics",
      icon: BarChart3,
      color: "from-green-500 to-emerald-500",
      link: createPageUrl("Analytics"),
    },
  ];

  return (
    <Card className="shadow-lg border-none bg-white/80 backdrop-blur-sm">
      <CardHeader className="border-b border-slate-100 pb-4">
        <CardTitle className="flex items-center gap-2 text-xl">
          <Sparkles className="w-5 h-5 text-blue-500" />
          Quick Actions
        </CardTitle>
      </CardHeader>
      <CardContent className="p-6">
        <div className="space-y-3">
          {actions.map((action, index) => (
            <Link key={index} to={action.link}>
              <Button
                variant="outline"
                className="w-full justify-start gap-3 h-auto p-4 hover:border-blue-300 hover:bg-blue-50 transition-all group"
              >
                <div className={`p-2 rounded-lg bg-gradient-to-br ${action.color} shadow-md group-hover:shadow-lg transition-shadow`}>
                  <action.icon className="w-5 h-5 text-white" />
                </div>
                <span className="font-medium text-slate-700 group-hover:text-blue-600">
                  {action.title}
                </span>
              </Button>
            </Link>
          ))}
        </div>
        {todayTasksCount > 0 && (
          <div className="mt-6 p-4 bg-gradient-to-r from-blue-50 to-cyan-50 rounded-lg border border-blue-200">
            <p className="text-sm text-blue-900">
              <span className="font-semibold">{todayTasksCount}</span> task{todayTasksCount !== 1 ? 's' : ''} due today
            </p>
          </div>
        )}
      </CardContent>
    </Card>
  );
}
